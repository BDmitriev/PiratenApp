@model IEnumerable<Pirat>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Nachname</th>
            <th scope="col">Straße</th>
            <th scope="col">Hausnummer</th>
            <th scope="col">PLZ</th>
            <th scope="col">Stadt</th>
            <th scope="col">Motiv</th>
            <th scope="col">Schiffe</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Pirat pirat in @Model)
        {
            <tr>
                <th scope="row">@pirat.PiratId</th>
                <td scope="col">@pirat.Name</td>
                <td scope="col">@pirat.Surname</td>
                <td scope="col">@pirat.Street</td>
                <td scope="col">@pirat.HouseNumber</td>
                <td scope="col">@pirat.ZIP</td>
                <td scope="col">@pirat.City</td>


                <td scope="col"><img src="/Upload/Images/@pirat.Motiv" alt="" height="50" width="50" /></td>


                <td scope="col">

                    @foreach (PiratSchiff piratSchiff in pirat.PiratSchiff)
                    {
                            @piratSchiff.Schiff.SchiffName

                            @Html.Raw("&nbsp;")
                    }

                </td>

            </tr>
        }

    </tbody>

</table>
    

<a class="btn btn-success" asp-action="Index">Zurück zur Startseite</a>
