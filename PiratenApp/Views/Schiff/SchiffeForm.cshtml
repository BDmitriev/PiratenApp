@model Schiff

@{
    ViewData["Title"] = "SchiffeForm";
}

    <div class="container">

        <div class="row">

            <div class="col-12">
                <h2>Hier findet die Datenerfassung von Schiffen statt:</h2>

                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

        </div>


        <div class="row">

            <div class="col-12">

                <form asp-controller="Schiff" asp-action="SchiffeInput" method="post">


                    <div class="form-group">
                        <label>Geben Sie bitte den Schiffsnamen an:</label>
                        <input asp-for="SchiffName" class="form-control" />
                    </div>


                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Datenerfassung beenden" />
                    </div>

                    <a class="btn btn-success" asp-action="Index">Zurück zur Startseite</a>
                </form>

            </div>

        </div>

    </div>

